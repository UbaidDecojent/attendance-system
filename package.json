{
  "name": "attendance-saas",
  "version": "1.0.0",
  "description": "Enterprise-grade SaaS Attendance Management System",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:migrate": "npm run db:migrate --workspace=@attendance/api",
    "db:seed": "npm run db:seed --workspace=@attendance/api",
    "db:studio": "npm run db:studio --workspace=@attendance/api"
  },
  "devDependencies": {
    "turbo": "^1.12.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
